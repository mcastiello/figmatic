{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["jest", "node"],
    "declaration": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "verbatimModuleSyntax": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
